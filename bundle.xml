<?xml version="1.0" encoding="utf-8"?>
<adapt_framework>
  <bundle>
    <label>Adapt Forms</label>
    <name>forms</name>
    <type>extension</type>
    <version>0.8.0</version>
    <namespace>\adapt\forms</namespace>
    <version_status>release</version_status>
    <availability>public</availability>
    <description>Provide complex forms with full validation</description>
    <copyright>2015 Adapt Framework</copyright>
    <license>MIT</license>
    <depends_on>
      <bundle>
        <name>jquery</name>
      </bundle>
      <bundle>
        <name>bootstrap_views</name>
        <version>1.0</version>
      </bundle>
      <bundle>
        <name>adapt</name>
        <version>2.0</version>
      </bundle>
      <bundle>
          <name>language</name>
          <version>1.0</version>
      </bundle>
    </depends_on>
    <language_strings>
        <string language="en_gb" key="Choose one" value="Pick one" />
        <string language="en_gb" key="Location" value="Place" />
    </language_strings>
    <schema>
      <add>
        <table name="form">
          <field name="form_id" key="primary" auto-increment="Yes">
            <data_type>bigint</data_type>
            <label>Form #</label>
          </field>
          <field name="bundle_name">
            <data_type>varchar</data_type>
            <max_length>64</max_length>
            <label>Bundle</label>
          </field>
          <field name="custom_view">
            <data_type>varchar</data_type>
            <max_length>512</max_length>
            <label>Custom view</label>
          </field>
          <field name="submission_url">
            <data_type>varchar</data_type>
            <max_length>256</max_length>
            <label>Submission URL</label>
          </field>
          <field name="method">
            <data_type>enum('get', 'post', 'json')</data_type>
            <default_value>post</default_value>
            <label>Method</label>
          </field>
          <field name="actions">
            <data_type>varchar</data_type>
            <max_length>256</max_length>
            <label>Actions</label>
          </field>
          <field name="name" index="Yes" index-size="32">
            <data_type>varchar</data_type>
            <max_length>64</max_length>
            <label>Name</label>
          </field>
          <field name="title">
            <data_type>varchar</data_type>
            <max_length>128</max_length>
            <label>Form title</label>
          </field>
          <field name="description">
            <data_type>text</data_type>
            <label>Description</label>
          </field>
          <field name="show_steps">
            <data_type>enum('Yes', 'No')</data_type>
            <default_value>No</default_value>
            <label>Show steps</label>
            <description>For forms with multiple pages.</description>
          </field>
          <field name="show_processing_page">
            <data_type>enum('Yes', 'No')</data_type>
            <default_value>Yes</default_value>
            <label>Show processing page</label>
            <description>Upon form submission a processing page is displayed show that the user knows that something is happening.</description>
          </field>
        </table>
        <table name="form_page">
          <field name="form_page_id" key="primary" auto-increment="Yes">
            <data_type>bigint</data_type>
            <label>Form page #</label>
          </field>
          <field name="form_id" key="foreign" referenced-table-name="form" referenced-field-name="form_id">
            <data_type>bigint</data_type>
            <label>Form #</label>
          </field>
          <field name="bundle_name">
            <data_type>varchar</data_type>
            <max_length>64</max_length>
            <label>Bundle</label>
          </field>
          <field name="priority">
            <data_type>int</data_type>
            <label>Priority</label>
          </field>
          <field name="custom_view">
            <data_type>varchar</data_type>
            <max_length>512</max_length>
            <label>Custom View</label>
          </field>
          <field name="title">
            <data_type>varchar</data_type>
            <max_length>128</max_length>
            <label>Page title</label>
          </field>
          <field name="description">
            <data_type>text</data_type>
            <label>Description</label>
          </field>
          <field name="step_title">
            <data_type>varchar</data_type>
            <max_length>20</max_length>
            <label>Step title</label>
            <description>A title to appear in the page step indicator for this page.</description>
          </field>
          <field name="step_description">
            <data_type>varchar</data_type>
            <max_length>32</max_length>
            <label>Step description</label>
            <description>A short description to appear in the page step indicator for this page.</description>
          </field>
          <field name="step_custom_view">
            <data_type>varchar</data_type>
            <max_length>256</max_length>
            <label>Step custom view</label>
            <description>A custom view to replace the page step indicator for this page. Be sure to include the full namespace and class name. See the documentation for more information.</description>
          </field>
        </table>
        <table name="form_button_style">
          <field name="form_button_style_id" key="primary" auto-increment="Yes">
            <data_type>bigint</data_type>
            <label>Form button style #</label>
          </field>
          <field name="bundle_name">
            <data_type>varchar</data_type>
            <max_length>64</max_length>
            <label>Bundle</label>
          </field>
          <field name="name" index="Yes" index-size="32">
            <data_type>varchar</data_type>
            <max_length>64</max_length>
            <nullable>No</nullable>
            <label>Name</label>
          </field>
          <field name="classes">
            <data_type>varchar</data_type>
            <max_length>256</max_length>
            <label>CSS Classes</label>
            <description>A space separated list of css classes to apply to this button</description>
          </field>
          <record>
            <name>Standard</name>
            <classes>btn btn-default</classes>
          </record>
          <record>
            <name>Primary</name>
            <classes>btn btn-primary</classes>
          </record>
          <record>
            <name>Success</name>
            <classes>btn btn-success</classes>
          </record>
          <record>
            <name>Informative</name>
            <classes>btn btn-info</classes>
          </record>
          <record>
            <name>Warning</name>
            <classes>btn btn-warning</classes>
          </record>
          <record>
            <name>Danger</name>
            <classes>btn btn-danger</classes>
          </record>
          <record>
            <name>Link</name>
            <classes>btn btn-link</classes>
          </record>
          <record>
            <name>Standard block</name>
            <classes>btn btn-default btn-block</classes>
          </record>
          <record>
            <name>Primary block</name>
            <classes>btn btn-primary btn-block</classes>
          </record>
          <record>
            <name>Success block</name>
            <classes>btn btn-success btn-block</classes>
          </record>
          <record>
            <name>Informative block</name>
            <classes>btn btn-info btn-block</classes>
          </record>
          <record>
            <name>Warning block</name>
            <classes>btn btn-warning btn-block</classes>
          </record>
          <record>
            <name>Danger block</name>
            <classes>btn btn-danger btn-block</classes>
          </record>
        </table>
        <table name="form_page_button">
          <field name="form_page_button_id" key="primary" auto-increment="Yes">
            <data_type>bigint</data_type>
            <label>Form page button #</label>
          </field>
          <field name="form_page_id" key="foreign" referenced-table-name="form_page" referenced-field-name="form_page_id">
            <data_type>bigint</data_type>
            <label>Form page #</label>
          </field>
          <field name="bundle_name">
            <data_type>varchar</data_type>
            <max_length>64</max_length>
            <label>Bundle</label>
          </field>
          <field name="custom_view">
            <data_type>varchar</data_type>
            <max_length>512</max_length>
            <label>Custom View</label>
          </field>
          <field name="priority">
            <data_type>int</data_type>
            <label>Priority</label>
          </field>
          <field name="form_button_style_id" key="foreign" referenced-table-name="form_button_style" referenced-field-name="form_button_style_id">
            <data_type>bigint</data_type>
            <lookup_table>form_page_style</lookup_table>
            <label>Button style</label>
          </field>
          <field name="label">
            <data_type>varchar</data_type>
            <max_length>64</max_length>
            <label>Label</label>
          </field>
          <field name="icon_name">
            <data_type>varchar</data_type>
            <max_length>128</max_length>
            <label>Icon name</label>
            <description>The name of the icon to be displayed.</description>
          </field>
          <field name="icon_class">
            <data_type>varchar</data_type>
            <max_length>512</max_length>
            <label>Icon class</label>
            <description>The full namespace and class name of the icon class.</description>
          </field>
          <field name="action">
            <data_type>enum('Submit', 'Reset', 'Next page', 'Previous page', 'Custom...')</data_type>
            <default_value>Next page</default_value>
            <nullable>No</nullable>
            <label>Action</label>
          </field>
          <field name="custom_action">
            <data_type>varchar</data_type>
            <max_length>512</max_length>
            <label>Custom action</label>
            <description>The javascript to be called on click.</description>
          </field>
        </table>
        <table name="form_page_section_layout">
          <field name="form_page_section_layout_id" key="primary" auto-increment="Yes">
            <data_type>bigint</data_type>
            <label>Section layout #</label>
          </field>
          <field name="bundle_name">
            <data_type>varchar</data_type>
            <max_length>64</max_length>
            <label>Bundle</label>
          </field>
          <field name="custom_view">
            <data_type>varchar</data_type>
            <max_length>512</max_length>
            <label>Custom view</label>
            <nullable>No</nullable>
          </field>
          <field name="name">
            <data_type>varchar</data_type>
            <max_length>64</max_length>
            <nullable>No</nullable>
            <label>Name</label>
          </field>
          <field name="label">
            <data_type>varchar</data_type>
            <max_length>128</max_length>
            <nullable>No</nullable>
            <label>Label</label>
          </field>
          <field name="description">
            <data_type>text</data_type>
            <label>Description</label>
          </field>
          <record>
            <name>standard</name>
            <label>Standard</label>
            <description>Default layout for sections with one field per line.</description>
            <custom_view>\adapt\forms\view_section_layout_standard</custom_view>
          </record>
          <record>
            <name>inline</name>
            <label>Inline</label>
            <description>Makes a section inline and on one line.</description>
            <custom_view>\adapt\forms\view_section_layout_inline</custom_view>
          </record>
          <record>
            <name>horizontal</name>
            <label>Horizontal</label>
            <description>Lays out the section in the same way as Bootstrap horizontal forms.</description>
            <custom_view>\adapt\forms\view_section_layout_horizontal</custom_view>
          </record>
          <record>
            <name>2_col</name>
            <label>Two column</label>
            <description>Uses Bootstrap grid to create a two column layout.</description>
            <custom_view>\adapt\forms\view_section_layout_two_col</custom_view>
          </record>
          <record>
            <name>3_col</name>
            <label>Three column</label>
            <description>Uses Bootstrap grid to create a three column layout.</description>
            <custom_view>\adapt\forms\view_section_layout_three_col</custom_view>
          </record>
          <record>
            <name>4_col</name>
            <label>Four column</label>
            <description>Uses Bootstrap grid to create a four column layout.</description>
            <custom_view>\adapt\forms\view_section_layout_four_col</custom_view>
          </record>
        </table>
        <table name="form_page_section">
          <field name="form_page_section_id" key="primary" auto-increment="Yes">
            <data_type>bigint</data_type>
            <label>Form page section #</label>
          </field>
          <field name="form_page_id" key="foreign" referenced-table-name="form_page" referenced-field-name="form_page_id">
            <data_type>bigint</data_type>
            <label>Form page #</label>
          </field>
          <field name="form_page_section_layout_id" key="foreign" referenced-table-name="form_page_section_layout" referenced-field-name="form_page_section_layout_id">
