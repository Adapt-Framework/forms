            <label>Layout</label>
          </field>
          <field name="bundle_name">
            <data_type>varchar</data_type>
            <max_length>64</max_length>
            <label>Bundle</label>
          </field>
          <field name="custom_view">
            <data_type>varchar</data_type>
            <max_length>512</max_length>
            <label>Custom view</label>
          </field>
          <field name="priority">
            <data_type>int</data_type>
            <label>Priority</label>
          </field>
          <field name="repeatable">
            <data_type>enum('Yes', 'No')</data_type>
            <default_value>No</default_value>
            <label>Repeatable</label>
          </field>
          <field name="min_occurances">
            <data_type>int</data_type>
            <label>Min occurances</label>
            <description>Whats the minimum number of times this section can be repeated?</description>
          </field>
          <field name="max_occurances">
            <data_type>int</data_type>
            <label>Min occurances</label>
            <description>Whats the maximum number of times this section can be repeated? Leave empty for unlimited.</description>
          </field>
          <field name="occurs_until">
            <data_type>varchar</data_type>
            <max_length>256</max_length>
            <label>Occurs until</label>
            <description>A javascript function that should return true or false to indicate if this section should repeat.</description>
          </field>
          <field name="title">
            <data_type>varchar</data_type>
            <max_length>128</max_length>
            <label>Section title</label>
          </field>
          <field name="description">
            <data_type>text</data_type>
            <label>Section description</label>
          </field>
          <field name="repeated_title">
            <data_type>varchar</data_type>
            <max_length>128</max_length>
            <label>Repeated section title</label>
          </field>
          <field name="repeated_description">
            <data_type>text</data_type>
            <label>Repeated section description</label>
          </field>
        </table>
        <table name="form_page_section_button">
          <field name="form_page_section_button_id" key="primary" auto-increment="Yes">
            <data_type>bigint</data_type>
            <label>Section button #</label>
          </field>
          <field name="form_page_section_id" key="foreign" referenced-table-name="form_page_section" referenced-field-name="form_page_section_id">
